<p id="notice"><%= notice %></p>
<%= render 'layouts/breadcrumb', titles: [['Menu',menu_path], ['Tablas de referencia', references_tables_path]]%>

<%= form_tag(position_types_path, method: :get) do %>
  <div class="form-group">
  <%= label_tag "Nombre:" %>
  <%= text_field_tag :by_name,"", class: "form-control" %>
  </div>
  <%= submit_tag 'Buscar', class: 'btn btn-success' %>
<% end %>

<h1>Position Types</h1>

<table class="table table-hover pretty">
  <thead>
    <tr>
      <th><%= sortable "name", "Nombre "%></th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @position_types.each do |position_type| %>
      <tr>
        <td><%= position_type.name.upcase %></td>
        <td><%= link_to 'Show', position_type %></td>
        <td><%= link_to 'Edit', edit_position_type_path(position_type) %></td>
        <td><%= link_to 'Destroy', position_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Position Type', new_position_type_path %>


<%= form_for(position_type) do |f| %>
  <% if position_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(position_type.errors.count, "error", plural="errores") %> impidieron este tipo de posición de ser guardada:</h2>

      <ul>
      <% position_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label "Nombre" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label "Mínimo grado" %>
    <%= f.text_field :minimum_degree, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label "Máximo grado" %>
    <%= f.text_field :maximum_degree, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit locals[:submit_string], class: 'btn btn-success'%>
  </div>
<% end %>

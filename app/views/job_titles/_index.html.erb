
<h1>Job Titles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% job_titles.each do |job_title| %>
      <tr>
        <td><%= job_title.name %></td>
        <td><%= link_to 'Show', job_title %></td>
        <td><%= link_to 'Edit', edit_job_title_path(job_title) %></td>
        <td><%= link_to 'Destroy', job_title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Title', new_area_job_title_path(area_id: params[:id]) %>

<%= form_for(criteria_type) do |f| %>
  <% if criteria_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(criteria_type.errors.count, "error") %> impidieron a este tipo de criterio de ser guardado:</h2>

      <ul>
      <% criteria_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nombre:" %>
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>
<%= render 'layouts/breadcrumb', titles: [['Menu',menu_path]]%>

<h1>Valuations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Job title</th>
      <th>Position type</th>
      <th>Knowledge</th>
      <th>Skill</th>
      <th>Definition supervision</th>
      <th>Risk decision</th>
      <th>Sustainability</th>
      <th>Area impact</th>
      <th>Influence</th>
      <th>Score</th>
      <th>Degree</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @valuations.each do |valuation| %>
      <tr>
        <td><%= valuation.job_title.name %></td>
        <td><%= valuation.position_type.name %></td>
        <td><%= valuation.knowledge.score %></td>
        <td><%= valuation.skill.score %></td>
        <td><%= valuation.definition_supervision.score %></td>
        <td><%= valuation.risk_decision.score %></td>
        <td><%= valuation.sustainability.score %></td>
        <td><%= valuation.area_impact.score %></td>
        <td><%= valuation.influence.score %></td>
        <td><%= valuation.score %></td>
        <td><%= valuation.degree.number %></td>
        <td><%= link_to 'Show', valuation %></td>
        <td><%= link_to 'Edit', edit_valuation_path(valuation) %></td>
        <td><%= link_to 'Destroy', valuation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Valuation', new_company_valuation_path(params[:company_id]) %>

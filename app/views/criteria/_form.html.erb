<%= form_for(criterium) do |f| %>
  <% if criterium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(criterium.errors.count, "error", plural ="errores") %> impidieron este criterio de ser guardado:</h2>

      <ul>
      <% criterium.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label "Tipo de criterio" %>
    <%= f.text_field :criteria_type, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label "Puntaje" %>
    <%= f.number_field :score, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label "Grado" %>
    <%= f.text_field :degree_id, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label "DescripciÃ³n" %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit locals[:submit_string], class: 'btn btn-success'%>
  </div>
<% end %>

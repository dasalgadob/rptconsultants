<%= form_for(criterium) do |f| %>
  <% if criterium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(criterium.errors.count, "error", plural ="errores") %> impidieron este criterio de ser guardado:</h2>

      <ul>
      <% criterium.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label "Rol" %>
    <%= f.select :position_type_id, options_for_select(@position_types.map{ |pt| [pt.name.upcase, pt.id]}, selected: @position_type.id),{ :include_blank => false },{ class: 'form-control'} %>
  </div>

  <div class="field form-group">
    <%= f.label "Tipo de criterio" %>
    <%= f.select :criteria_type_id,options_for_select(@criteria_types.map{ |ct| [ct.name, ct.id]}, selected: @criteria_type.id),{ :include_blank => false },{ class: 'form-control'} %>
  </div>

  <div class="field form-group">
    <%= f.label "Puntaje" %>
    <%= f.number_field :score, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label "Grado" %>
    <%= f.select :degree_id, options_for_select(@degrees.map{ |d| [d.number, d.id]}, selected: @degree.id),{ :include_blank => true },{ class: 'form-control'} %>
  </div>

  <div class="field form-group">
    <%= f.label "DescripciÃ³n" %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit locals[:submit_string], class: 'btn btn-success'%>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Criteria</h1>

<table>
  <thead>
    <tr>
      <th>Criteria type</th>
      <th>Score</th>
      <th>Degree</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criteria.each do |criterium| %>
      <tr>
        <td><%= criterium.criteria_type %></td>
        <td><%= criterium.score %></td>
        <td><%= criterium.degree %></td>
        <td><%= link_to 'Show', criterium %></td>
        <td><%= link_to 'Edit', edit_criterium_path(criterium) %></td>
        <td><%= link_to 'Destroy', criterium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

